{
  "name": "@miccheck/audio-metrics",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "echo 'no lint configured'",
    "test": "vitest run --coverage"
  },
  "vitest": {
    "test": {
      "include": [
        "src/**/*.{test,spec}.?(c|m)[jt]s?(x)",
        "test/**/*.{test,spec}.?(c|m)[jt]s?(x)"
      ],
      "exclude": ["dist/**", "node_modules/**"]
    },
    "coverage": {
      "reporter": ["text", "html"],
      "thresholds": {
        "lines": 60,
        "functions": 60,
        "branches": 50,
        "statements": 60
      }
    }
  },
  "dependencies": {
    "@miccheck/audio-core": "file:../audio-core"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
