{
  "name": "web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run --coverage"
  },
  "vitest": {
    "test": {
      "include": [
        "src/**/*.{test,spec}.?(c|m)[jt]s?(x)",
        "app/**/*.{test,spec}.?(c|m)[jt]s?(x)",
        "lib/**/*.{test,spec}.?(c|m)[jt]s?(x)"
      ],
      "exclude": [
        "dist/**",
        "node_modules/**",
        ".next/**"
      ]
    },
    "coverage": {
      "reporter": [
        "text",
        "html"
      ],
      "thresholds": {
        "lines": 60,
        "functions": 60,
        "branches": 50,
        "statements": 60
      }
    }
  },
  "dependencies": {
    "@miccheck/audio-core": "file:../../packages/audio-core",
    "@miccheck/audio-metrics": "file:../../packages/audio-metrics",
    "next": "16.1.6",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
